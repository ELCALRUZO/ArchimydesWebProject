@model ArchimydesWeb.ViewModels.HoldSystemUserViewModel



@{
    ViewData["Title"] = "SystemUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card-body">

    <div class="card">

        <div class="card-body">
            <h2 class="mb-2">Users</h2>
            <br />
            <div class="col-10 mb-6">
                <form asp-action="SystemUsers" asp-controller="SysUser" method="get">
                    <div class="float-left mr-3">
                        <input name="searchText" placeholder="Enter UserName" class="form-control" />
                    </div>
                    <div class="float-left">
                        <input type="submit" value="Search" class="btn btn-info float-left mr-3" />
                        <a asp-action="SystemUser" class="btn btn-warning float-left">Create New User</a>
                    </div>
                </form>
            </div>

            @if (Model != null && Model.HoldAllSystemUsers.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            @*<th>S/N</th>*@
                            <th>
                                Full Name
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                Phone Number
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Telephone
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.HoldAllSystemUsers)
                        {
                            //indx++;
                        <tr>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MiddleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>

                            <td>
                                <a asp-controller="Home" asp-action="UpdateSystemUser" asp-route-id="@item.UserID" class="btn btn-success float-left ml-3">
                                    <span class="fe fe-edit">Edit</span>
                                </a>
                                <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.UserID" class="btn btn-success float-left ml-3">
                                    <span class="fe fe-edit">Delete</span>
                                </a>

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <h2>No Available User(s)</h2>
            }

        </div>
    </div>
</div>



